function project_release_compatibility_list() {
  if ($tree = project_release_get_api_taxonomy()) {
    $tids = variable_get('project_release_active_compatibility_tids', '');
    $terms[-1] = '<' . t('all') . '>';
    foreach ($tree as $term) {
